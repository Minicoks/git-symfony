                                <li><a class="dropdown-item" href="{{path('category_index')}}">Produit2</a></li>
                                <li><a class="dropdown-item" href="{{path('produit_index')}}">Produit3</a></li>
                        
                            </ul>
                        </li>
                        {% elseif is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('presentationProduit')}}">Produit</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('contact')}}">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('login')}}">Login</a>
                        </li>
                        {% if is_granted('ROLE_USER')%}
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_logout')}}">Logout</a>
                        </li>
                        {% endif %}
                        {% if is_granted('ROLE_USER')%}
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_register')}}">Register</a>
                        </li>
                        {% endif %}
                        {% if is_granted('ROLE_USER')%}
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('profil')}}">Profil</a>
                        </li>
                        {% endif %}
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    </div>
                </div>
            </nav>

        </header>

        {% block body %}{% endblock %}

        <footer class="text-center bg-primary" style="margin-top: 2%;">
            <div>
                TC Web 2022
            </div>

            <div>
                <a href="mentions" style="text-decoration: none; color:white;">Mentions L√©gales</a>
